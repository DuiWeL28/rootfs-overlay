#!/bin/sh
#
# a rude shutdown menu

watdo="$(yad --list \
	--title="Shutdown" \
	--center \
	--width=300 \
	--height=180 \
	--column="Action" --column="Description" \
	"shutdown" "perform a system shutdown" \
	"reboot"   "perform a system reboot" \
	"suspend"  "suspend to ram")"

case "$watdo" in
	shutdown)
		yad --info --text="Will shut down after you click OK."
		exec sup heads-init shutdown
		;;
	reboot)
		yad --info --text="Will shut down after you click OK."
		exec sup heads-init reboot
		;;
	suspend)
		exec sudo /usr/sbin/pm-suspend
		;;
	*)
		exit 0
		;;
esac
