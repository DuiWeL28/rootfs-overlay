#!/bin/sh
#
# heads welcome message and startup stuff
# https://www.mankier.com/1/yad

cat /usr/share/heads/fa1b0274.asc | gpg --quiet --import

yad \
	--title="Welcome!" \
	--text-info \
	--image="/usr/share/heads/mouse.png" \
	--button=OK:0 \
	--buttons-layout=spread \
	--fontname="Liberation Sans regular 10" \
	--margins=15 \
	--center \
	--width=640 \
	--height=280 \
	--wrap \
	--filename="/home/luther/welcome.txt"
